<!-- Banner with large splash background -->
<%= render 'shared/banner' %>

<!-- Features Section -->
<%= render 'shared/features' %>

<!-- Process/Get Started Section -->
<%= render 'shared/process' %>

<!-- Map/Cities Section -->
<%= render 'shared/map' %>

<!-- Locations Section -->

<!-- Testimonials Section -->
<%= render 'shared/testimonials' %>

<!-- Credit Plans Section -->
<%= render 'shared/plans' %>

<% if user_signed_in? %>
    <script type="text/javascript">
        mixpanel.identify(<%= current_user.id %>);
        mixpanel.people.set({
            "$email": <%= current_user.email %>,
            "$first_name": <%= current_user.first_name %>,
            "$last_name": <%= current_user.last_name %>,
            "$created": <%= current_user.created_at %>,
            "$last_login": <%= current_user.current_sign_in_at %>,
            "credits": <%= current_user.credit_amount %>
        });

    </script>
<% end %>

<script type="text/javascript">
    mixpanel.track("Splash page loaded");
</script>
