<div class="promo-section" id="download">
    <h1><%= @contestant.current_step_index %> <small>of</small> <%= @contestant.steps.count %></h1>
    <%= f.hidden_field :has_downloaded, :value => true %>
    <h1 id="download-step-header">Download the App</h1>
      <% if @contestant.email_has_downloaded? %>
        <h2>Looks like you've already downloaded the app. You rock!</h2>
      <% else %>
        <button type="submit" class="promo-phone-link promo-phone-left"i value="iphone">
            TapFit for iPhone
        </button>
        <button type="submit" class="promo-phone-link promo-phone-right" value="android">
            TapFit for Android
        </button>
      <% end %>
    <%= image_tag "splash_iphone.png", :class => "promo-iphone" %>
</div>
